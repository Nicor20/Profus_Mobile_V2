
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/linearLayout3" >
        <Space
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:id="@+id/space2" />
        <TextView
            android:text="Numero Joueur + Nom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/textViewInfo_Joueur" />
        <TextView
            android:text="Num question + Categorie"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/textViewInfo_Question" />
        <Space
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:id="@+id/space2" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/space1" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:id="@+id/linearLayout4">
        <Button
            android:text="R\ne\nt\no\nu\nr"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button_Retour" />
        <TextView
            android:text="Afficher la question de maniere approprié."
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:id="@+id/textView_Question" />
        <Button
            android:text="T\ne\nr\nm\ni\nn\né"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button_Terminer" />

    </LinearLayout>
   
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/linearLayout2" >
        <Button
            android:text="A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/buttonA" />
        <Button
            android:text="B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            
            android:id="@+id/buttonB" />
        <Button
            android:text="C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            
            android:id="@+id/buttonC" />
        <Button
            android:text="D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            
            android:id="@+id/buttonD" />
    </LinearLayout>
</LinearLayout>